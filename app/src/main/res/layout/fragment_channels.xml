<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:id="@+id/channels_layout">


    <RelativeLayout
        android:id="@+id/add_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        >

        <EditText
            android:id="@+id/addurl_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:hint="Enter new feed URL"
            android:layout_centerVertical="true"
            android:maxLines="1"/>

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textSize="16dp"
            android:layout_toRightOf="@id/addurl_view"
            android:layout_marginLeft="15dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/add_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RSS feeds:"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="16dp"/>

        <Spinner
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:spinnerMode="dropdown"
            android:id="@+id/channel_spinner"
            >

        </Spinner>

    </LinearLayout>

</RelativeLayout>